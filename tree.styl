.link
  fill none
  stroke gray

// center text in bubbles
.node-text
  text-anchor middle
  dominant-baseline middle

.node-dot
  fill white
  stroke gray

// entire node hover so mousing over the text in the middle won't change back
// to a regular cursor
.node:hover
  cursor pointer

// string

.token
  padding 1em
  font-size 16pt

.hovered
  fill pink
  background pink
  cursor pointer

.left-hovered
  fill #afa
  background #afa

.right-hovered
  fill #aaf
  background #aaf

